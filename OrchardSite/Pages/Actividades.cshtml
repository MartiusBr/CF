@page
@inject OrchardCore.IOrchardHelper Orchard

@{
    Layout = "_Layout";
}

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Punny headline</h1>
        <p class="lead font-weight-normal">And an even wittier subheading to boot. Jumpstart your marketing efforts with this example based on Apple's marketing pages.</p>
        <a class="btn btn-outline-secondary" href="#">Coming soon</a>
    </div>
    <div class="product-device box-shadow d-none d-md-block"></div>
    <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>

@foreach (var Post in await Orchard.GetRecentContentItemsByContentTypeAsync("BlogPost"))
{
    <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
        <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
            <div class="my-3 py-3">
                <h2 class="display-5">@Post</h2>
                <p class="lead">@Post.Content.BlogPost.Subtitle.Text</p>
            </div>
           
        </div>
        <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
            <div class="my-3 p-3">
                <h2 class="display-5">@Post.Content.BlogPost.Subtitle.Text</h2>
@{ 
    String markdown = Post.Content.MarkdownBodyPart.Markdown;
}
                @Orchard.MarkdownToHtml(markdown)
            </div>
            
        </div>
    </div>


}

